<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/design_default_color_background"
    tools:context=".RestaurantManagement">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape"/>


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant Management"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Section for merchant to Edit their restaurant locations -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/add_rectangle"
                android:layout_margin="10dp"
                android:padding="10dp"
                >

                <Button
                    android:id="@+id/btnAddRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="10dp"
                    android:text="Add Restaurant"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:backgroundTint="#d0d3cf"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true">
                </Button>
            </RelativeLayout>

            <!-- Section for merchant to Edit their restaurant locations -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/add_rectangle"
                android:layout_margin="10dp"
                android:padding="10dp"
                >

                <Button
                    android:id="@+id/btnViewEditRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="10dp"
                    android:text="Edit Restaurant"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:backgroundTint="#d0d3cf"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true">
                </Button>


            </RelativeLayout>

            <!-- Section for merchant to Edit their restaurant locations -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/add_rectangle"
                android:layout_margin="10dp"
                android:padding="10dp"
                >

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="10dp"
                    android:text="Delete Restaurant"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:backgroundTint="#d0d3cf"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true">
                </Button>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

